<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <div>
            @IsPost
        </div>
        <div>
            @Request.Form
        </div>
        <div>
            Method is @Request.HttpMethod;
        </div>
        <ul>
            @{
                for (int i = 0; i < 10; i++)
                {
                    <li>His name is @name</li>
                }
            }
        </ul>
        
    </div>
</body>
</html>
